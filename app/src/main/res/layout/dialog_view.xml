<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/listText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="List City"
        android:textColor="#000"
        android:textSize="28sp" />

    <RadioGroup
        android:id="@+id/radioGrup"
        android:layout_width="150dp"
        android:layout_height="250dp"
        android:layout_below="@+id/listText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp">

        <RadioButton
            android:id="@+id/kotaBandung"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="false"
            android:text="Bandung" />

        <RadioButton
            android:id="@+id/kotaJakarta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="false"
            android:text="Jakarta" />

        <RadioButton
            android:id="@+id/kotaSurabaya"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="false"
            android:text="Surabaya" />

        <RadioButton
            android:id="@+id/kotaSemarang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="false"
            android:text="Semarang" />

        <RadioButton
            android:id="@+id/kotaBogor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="false"
            android:text="Bogor" />
    </RadioGroup>

    <Button
        android:id="@+id/submitDialog"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radioGrup"
        android:layout_centerHorizontal="true"
        android:text="Submit" />


</RelativeLayout>